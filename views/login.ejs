<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Sabsaath</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/contact">Contact us</a>
              </li>
            </ul>
          </div>
          <a class="btn btn-primary" href="/signup">Sign up</a>
          <a class="btn btn-success mx-3" href="/login">Login</a>
        </div>
      </nav>

      <!-- Signup form -->
      <form class="container my-3" method="post" action="/login">
      <div class="mb-3 row my-3">
        <h1>Login</h1>
      <div class="mb-3 row">
        <div class="input-group">
            <span class="input-group-text">Email</span>
            <input type="text" aria-label="First name" class="form-control" name="email">
          </div>
      </div>
      <div class="mb-3 row">
        <div class="input-group">
            <span class="input-group-text">Password</span>
            <input type="password" aria-label="First name" class="form-control" name="password">
          </div>
      <div class="mb-3 row my-2">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit">Signup</button>
        </div>
      </div>
    </div>
  </form>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>